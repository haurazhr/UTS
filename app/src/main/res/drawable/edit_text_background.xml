<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#FFF7D1" /> <!-- light yellow background -->

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#FFC107" /> <!-- orange border -->

    <!-- Corner radius -->
    <corners android:radius="12dp" />

    <!-- Padding inside the edit text -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>